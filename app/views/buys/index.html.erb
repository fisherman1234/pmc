<h1>Listing buys</h1>

<table>
  <tr>
    <th>Id user</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Max price</th>
    <th>Id transaction</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buys.each do |buy| %>
  <tr>
    <td><%= buy.id_user %></td>
    <td><%= buy.latitude %></td>
    <td><%= buy.longitude %></td>
    <td><%= buy.max_price %></td>
    <td><%= buy.id_transaction %></td>
    <td><%= link_to 'Show', buy %></td>
    <td><%= link_to 'Edit', edit_buy_path(buy) %></td>
    <td><%= link_to 'Destroy', buy, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

